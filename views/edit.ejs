<%- include  ("partials/header") %>
<link rel="stylesheet" type="text/css" href="/Users/anjani/Desktop/BlogApp/views/index.css">

<div class="ui main text container segment">
	<div class="ui huge header">Edit Blog <%= blog.title %> </div>
	<form class="ui form" action="/blogs/<%= blog._id%>?_method=PUT" method="POST">

		<div class="field">
			<label>Title</label>
			<input type="text" name="blog[title]" value="<%= blog.title %>">
		</div>

		<div class="field">
			<label>Image</label>
			<input type="text" name="blog[image]" value="<%= blog.image %>" >
		</div>

		<div class="field">
			<label>Enter blog content</label>
			<textarea name="blog[body]"><%= blog.body %></textarea>
		</div>

		
			
		<div>
			<input class="ui purple basic button" type="submit">
					
		</div>
			
	</form>
</div>

<%- include ("partials/footer") %>